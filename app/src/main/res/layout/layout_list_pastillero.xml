<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewHistoryBooking"
                android:layout_width="175dp"
                android:layout_height="125dp"
                android:scaleType="fitCenter"
                android:src="@drawable/pastilladetalle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:text="Nombre:"
                    android:textColor="@color/colorBlueLight"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtNomPastilla"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:maxLines="1"
                    android:text="Apronax"
                    android:textAlignment="viewStart"
                    android:textAllCaps="true"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="Cantidad:"
                    android:textColor="@color/colorBlueLight"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txtCantidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:maxLines="1"
                    android:text="15"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="Horario:"
                    android:textColor="@color/colorBlueLight"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txtHoraToma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:maxLines="1"
                    android:text="Diario"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/btnEliminar"
                    android:text="Eliminar🗑️"
                    android:layout_margin="10dp"
                    android:background="@drawable/rounded_button"
                    android:backgroundTint="@color/colorred"
                    android:textColor="@color/colorWhite"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lunes: "
                android:textColor="@color/colorBlueLight"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtTomaLunes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Martes: "
                android:textColor="@color/colorBlueLight"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtTomaMartes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Miercoles: "
                android:textColor="@color/colorBlueLight"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtTomaMiercoles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jueves: "
                android:textColor="@color/colorBlueLight"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtTomaJueves"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Viernes: "
                android:textColor="@color/colorBlueLight"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtTomaViernes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sabado: "
                android:textColor="@color/colorBlueLight"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtTomaSabado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Domingo: "
                android:textColor="@color/colorBlueLight"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtTomaDomingo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="" />
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>