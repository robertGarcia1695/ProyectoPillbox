<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.optic.Smartpillbox">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="PillBOX"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Modulos.ActualizarPerfilActivity" />
        <activity android:name=".Services.InternetServiceActivity" />
        <activity android:name=".LogIn.ValidarPastilleraActivity" />
        <activity android:name=".LogIn.SelectOpcionRegistrarActivity" />
        <activity android:name=".Modulos.ServicesOptionActivity" />
        <activity android:name=".Modulos.PerfilActivity" />
        <activity android:name=".Modulos.ListPastilleroActivity" />
        <activity android:name=".Modulos.RegisterPastilleroActivity" />
        <activity android:name=".Modulos.MenuActivity" />
        <activity android:name=".LogIn.CredencialesActivity" />
        <activity android:name=".Modulos.ApoyoActivity" />
        <activity
            android:name=".Modulos.RegisterUapoyoActivity"
            android:label="@string/title_activity_register_uapoyo"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".LogIn.RegisterActivity" />
        <activity
            android:name=".Modulos.SelectOptionAuthActivity"
            android:parentActivityName=".Modulos.MainActivity" />
        <activity android:name=".Modulos.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>